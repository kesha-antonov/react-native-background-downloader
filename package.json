{
  "name": "@kesha-antonov/react-native-background-downloader",
  "version": "3.2.6",
  "description": "A library for React-Native to help you download large files on iOS and Android both in the foreground and most importantly in the background.",
  "keywords": [
    "react-native",
    "background",
    "download",
    "large files"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kesha-antonov/react-native-background-downloader.git"
  },
  "homepage": "https://github.com/kesha-antonov/react-native-background-downloader",
  "license": "Apache-2.0",
  "author": {
    "name": "Kesha Antonov, Eko labs",
    "email": "innokenty.longway@gmail.com"
  },
  "contributors": [
    {
      "name": "Kesha Antonov, Elad Gil"
    }
  ],
  "main": "src/index.ts",
  "expo": {
    "plugin": "plugin/build/index.js"
  },
  "files": [
    "README.md",
    "LICENSE",
    "react-native-background-downloader.podspec",
    "package.json",
    "app.plugin.js",
    "src/",
    "ios/",
    "android/build.gradle",
    "android/src/",
    "plugin/build/"
  ],
  "scripts": {
    "bump": "npm version patch",
    "lint": "eslint .",
    "prepublishOnly": "npm run build-plugin && jest && npm run lint",
    "build-plugin": "tsc plugin/src/index.ts --outDir plugin/build --target ES2018 --module commonjs --declaration --esModuleInterop --skipLibCheck",
    "publish": "npm publish",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": "eslint --cache"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./__mocks__/RNBackgroundDownloader.js",
      "./node_modules/react-native/Libraries/EventEmitter/__mocks__/NativeEventEmitter.js"
    ],
    "roots": [
      "./__tests__"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/runtime": "^7.28.4",
    "@expo/config-plugins": "^54.0.2",
    "@react-native/babel-preset": "^0.81.4",
    "@react-native/eslint-config": "^0.81.4",
    "@react-native/metro-config": "^0.81.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-jsx": "^11.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "immer": "^10.1.3",
    "jest": "^30.2.0",
    "lint-staged": ">=16",
    "metro-react-native-babel-preset": "^0.77.0",
    "react": "19.1.0",
    "react-native": "0.81.4",
    "react-native-fs": "^2.20.0",
    "react-native-vector-icons": "^10.3.0",
    "react-test-renderer": "19.2.0",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "react-native": ">=0.57.0"
  }
}
