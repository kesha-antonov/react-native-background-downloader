    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "immer": "^10.1.1",
    "jest": "^29.7.0",
    "lint-staged": ">=15",
    "metro-react-native-babel-preset": "^0.77.0",
